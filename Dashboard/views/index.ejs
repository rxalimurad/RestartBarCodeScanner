<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restart Certified Data</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Basic CSS for demonstration purposes */
        .navbar {
            background-color: #333;
            overflow: hidden;
        }
        .navbar a {
            float: left;
            display: block;
            color: white;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
        }
        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }
    </style>
</head>
<body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">RESTART Certified Admin</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#" style="background-color: rgb(1, 151, 201);">All Users</a>
            </li>
              <li class="nav-item">
                <a class="nav-link" href="/reports">Reports</a>
              </li>
             
            
            </ul>
            
          </div>
        </div>
      </nav>

    <!-- Display all user data in table -->
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Sr. No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <!-- Add more table headers as needed -->
                </tr>
            </thead>
            <tbody>
                <% data.forEach((user, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td> <!-- Serial number incremented for each record -->
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phoneNumber %></td>
                        <!-- Add more table data fields here -->
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (optional, for some interactive features) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
